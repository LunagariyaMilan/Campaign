<fieldset id="password-credentials">
  <div data-hook="admin_user_category">
    <%= f.field_container :category, class: ['form-group'] do %>
      <%= f.label :category_id, Spree.t(:category) %>
      <%= f.collection_select(:category_id, Spree::Category.all, :id, :name, { include_blank: Spree.t('match_choices.none') }, { class: 'select2 form-control' }) %>
      <%= f.error_message_on :category %>
    <% end %>
  </div>

  <div data-hook="admin_user_salesman">
    <%= f.field_container :salesman, class: ['form-group'] do %>
      <%= f.label :salesman_id, Spree.t(:salesman) %>
      <%= f.collection_select(:salesman_id, Spree::Salesman.all, :id, :name, { include_blank: Spree.t('match_choices.none') }, { class: 'select2 form-control' }) %>
      <%= f.error_message_on :salesman %>
    <% end %>
  </div>

  <div class="form-group sales">
    <%= f.label :name, Spree.t(:name), class: 'required', title: 'required' %>
    <%= f.text_field :name, :class => 'form-control', :placeholder => Spree.t(:name) %>
  </div>

  <div class="form-group sales">
    <%= f.label :phone, Spree.t(:phone), class: 'required', title: 'required' %>
    <%= f.phone_field :phone, :class => 'form-control', :placeholder => Spree.t(:phone) %>
  </div>

  <div class="form-group">
    <%= f.label :email, Spree.t(:email), class: 'required', title: 'required' %>
    <%= f.email_field :email, :class => 'form-control', :placeholder => Spree.t(:email) %>
  </div>
  <hr />

  <%= f.label :follow_datetime, Spree.t(:follow_up), class: 'required', title: 'required' %>
  <div class="form-group">
    <%= f.datetime_field :follow_datetime, :class => 'form-control', :placeholder => Spree.t(:date_time) %>
  </div>

  <hr />
  <div class="form-group">
    <%= f.label :password, Spree.t(:password), class: 'required', title: 'required' %>
    <%= f.password_field :password, :class => 'form-control', :placeholder => Spree.t(:password) %>

  </div>
  <div class="form-group">
    <%= f.label :password_confirmation, Spree.t(:password_confirmation), class: 'required', title: 'required' %>
    <%= f.password_field :password_confirmation, :class => 'form-control', :placeholder => Spree.t(:confirm_password) %>
  </div>
</fieldset>
<div data-hook="signup_below_password_fields"></div>

