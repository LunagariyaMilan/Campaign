<div data-hook="admin_salesman_form_fields" class="row">
  <div class="col-12 col-md-6">
    <%= f.field_container :name, class: ['form-group'] do %>
      <%= f.label :name, Spree.t(:name) %>
      <%= f.text_field :name, class: 'form-control' %>
      <%= f.error_message_on :name %>
    <% end %>

    <%= f.field_container :google_client_id, class: ['form-group'] do %>
      <%= f.label :google_client_id, "Google Client Id" %>
      <%= f.text_field :google_client_id, class: 'form-control' %>
      <%= f.error_message_on :google_client_id %>
    <% end %>

    <%= f.field_container :google_client_secret, class: ['form-group'] do %>
      <%= f.label :google_client_secret, Spree.t(:google_client_secret) %>
      <%= f.text_field :google_client_secret, class: 'form-control' %>
      <%= f.error_message_on :google_client_secret %>
    <% end %>

    <%= f.field_container :google_calander_id, class: ['form-group'] do %>
      <%= f.label :google_calander_id, "Google Calander Id" %>
      <%= f.text_field :google_calander_id, class: 'form-control' %>
      <%= f.error_message_on :google_calander_id %>
    <% end %>

  </div>
</div>