<% content_for :page_title do %>
  <%= link_to Spree.t(:category), spree.admin_categories_url %>
  <%= Spree.t(:new_category) %>
<% end %>

<div data-hook="admin_category_new_form_header">
  <%= render partial: 'spree/admin/shared/error_messages', locals: { target: @user } %>
</div>

<div data-hook="admin_category_new_form">
  <%= form_for [:admin, @category] do |f| %>
    <%= render partial: 'form', locals: { f: f } %>

    <div data-hook="admin_category_edit_form_buttons">
      <div class="form-actions" data-hook="buttons">
        <%= button Spree.t('actions.update'), 'refresh', 'submit', {class: 'btn-success', data: { disable_with: "#{ Spree.t(:saving) }..." }} %>
        <span class="or"><%= Spree.t(:or) %></span>
        <%= button_link_to Spree.t('actions.cancel'), admin_categories_url, icon: 'delete' %>
      </div>
    </div>
  <% end %>
</div>